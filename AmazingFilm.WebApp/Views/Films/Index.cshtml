@model IEnumerable<AmazingFilm.DomainModel.Entities.Film>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New Film</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-3">
                    <b> @Html.DisplayFor(modelItem => item.Name)</b>
                </td>
                <td class="col-md-6">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="col-md-2">
                    <img src="@item.PhotoUrl" style="max-width:200px;height:auto" />
                </td>
                <td class="col-md-1">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="width:70px">Edit</a> <br />
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" style="width:70px">Details</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:70px">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
